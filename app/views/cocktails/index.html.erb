<%= render 'shared/banner' %>
<div class="container">
  <div class="my-5">
    <h1>Newest</h1>
  </div>
  <div class="row">
    <% @cocktails.first(3).each do |cocktail| %>
      <div class="col-4 p-1">
        <%= link_to cocktail_path(cocktail), class: 'text-white' do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/300x300/?cocktail)">
              <%= cocktail.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="my-5">
    <h1>All our cocktails</h1>
  </div>
  <div class="row">
